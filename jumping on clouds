#include <bits/stdc++.h>
using namespace std;
int main(){
    int n,count=0;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int i=0;
    while(i<n-2){
        if(arr[i]==0 && arr[i+1]==0 && arr[i+2]==0){
            count+=1;
            i+=2;
        }
        else if(arr[i]==0 && arr[i+1]==0 && arr[i+2]==1){ 
            count+=1;  
            i+=1;
        }
        else if(arr[i]==0 && arr[i+1]==1 && arr[i+2]==0){
            count+=1;
            i+=2;
        }
        else if(arr[i]==0 && arr[i+1]==0){
            count+=1;
            i+=1;
        }
    }
    if(arr[n-1]==0 && arr[n-2]==0){
        cout<<count+1;
    }
    else{
        cout<<count;
    }
}
