#include <iostream>
#include<bits/stdc++.h> 
#include <math.h>
using namespace std;
string binary(int k){
  string str;
  int num;
  str=bitset<3>(k).to_string();
  return str;
}
int main() {
    int n;
    cin>>n;
    int m=pow(2,n);
    int count=0,a[m];
    int b[n*n-1];
    for(int i=0;i<m;i++){
      a[i]=i;
    }
    for(int i=0;i<m;i++){
      string str;
      str=binary(a[i]);
      cout<<str<<"-"<<i<<"\t\t";
      int x=str.find("1",0);
      int y=str.find("1",x+1);
      cout<<x<<" "<<y<<endl;
      if(y-x!=1){
        count+=1;
      }
    }
    cout<<count;
}
