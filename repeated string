#include <bits/stdc++.h>
using namespace std;
int main(){
    string s;
    cin>>s;
    int l,q,r;
    long long int n,count=0;
    cin>>n;
    q=n/(s.length());
    r=n%(s.length());
    if((s.length())==1 && s[0]=='a'){
        cout<<n;
    }
    else if((s.length())>1){
        for(int i=0;i<(s.length());i++){
            if(s[i]=='a'){
                count+=1;
            }
        }
        count=count*q;
        for(int i=0;i<r;i++){
            if(s[i]=='a'){
                count+=1;
            }
        }
        cout<<count;
    }
    else if((s.length()==1 && s[0]!='a')){
        cout<<'0';
    }
}
